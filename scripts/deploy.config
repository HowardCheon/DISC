# DISC 프로젝트 배포 설정 파일
# 이 파일은 deploy.sh 스크립트에서 사용됩니다.

# Tomcat 설정
TOMCAT_HOME="/opt/tomcat"
TOMCAT_USER="tomcat"

# 배포 설정
DEPLOY_MODE="local"
AUTO_START=true
CREATE_BACKUP=true

# 백업 설정
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS=30

# 데이터베이스 설정
DB_INIT_ON_DEPLOY=false
DB_SAMPLE_DATA=false

# 알림 설정 (선택사항)
SLACK_WEBHOOK=""
EMAIL_NOTIFICATION=""